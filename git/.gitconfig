[user]
  name = Jonas Stenberg
  email = github@stenberg.io
[credential]
  helper = osxkeychain
[hub]
  protocol = https
[color]
  diff = auto
  status = auto
  branch = auto
  ui = true
[core]
  excludesfile = ~/.gitignore
	editor = nvim
	ignorecase = false
[apply]
  whitespace = nowarn
[mergetool]
  keepBackup = false
  cmd = nvim -d $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
[difftool]
  prompt = false
[diff]
  tool = vimdiff
[help]
  autocorrect = 1
[push]
  default = simple
[init]
	defaultBranch = main
[pull]
	rebase = true
